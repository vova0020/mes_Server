  entityType    String    @map("entity_type") // "order", "machine", "pallet", "part", "package"
  entityId      Int       @map("entity_id")
  userId        Int?      @map("user_id")
  oldValue      Json?     @map("old_value") // Старое значение (JSON)
  newValue      Json?     @map("new_value") // Новое значение (JSON)
